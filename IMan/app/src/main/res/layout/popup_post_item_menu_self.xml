<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_shadow_full"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        android:src="@mipmap/icon_white_arrow_up"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/layout_margin_size"
            android:paddingRight="@dimen/layout_margin_size"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/iv_title_share"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_title_share"
                android:text="@string/share_to"
                android:textColor="@color/txt_black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/iv_wx_circle"
                android:scaleType="fitCenter"
                android:src="@mipmap/umeng_socialize_wechat" />

            <ImageView
                android:id="@+id/iv_wx_circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/iv_qq"
                android:scaleType="fitCenter"
                android:src="@mipmap/umeng_socialize_wxcircle" />

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/iv_qq_zone"
                android:scaleType="fitCenter"
                android:src="@mipmap/umeng_socialize_qq" />

            <ImageView
                android:id="@+id/iv_qq_zone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/umeng_socialize_qzone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/layout_margin_size"
            android:layout_marginRight="@dimen/layout_margin_size"
            android:background="@color/bg_line_gray" />

        <RelativeLayout
            android:id="@+id/rel_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="@dimen/layout_margin_size"
            android:paddingRight="@dimen/layout_margin_size"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/iv_title_delete"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_delete_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_title_delete"
                android:text="@string/delete_this_msg"
                android:textColor="@color/txt_black"
                android:textSize="13sp" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        android:src="@mipmap/icon_white_arrow_down"
        android:visibility="gone" />

</LinearLayout>