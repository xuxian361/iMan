<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.sundy.iman.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/bg_light_gray" />

            <RelativeLayout
                android:id="@+id/rel_set_transfer_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tv_set_transfer_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/iv_arrow_pwd"
                    android:text="@string/set_imcoin_password"
                    android:textColor="@color/txt_black"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_arrow_pwd"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_arrow_right_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/bg_light_gray" />

            <RelativeLayout
                android:id="@+id/rel_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tv_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/iv_arrow_language"
                    android:text="@string/language"
                    android:textColor="@color/txt_black"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_arrow_language"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_arrow_right_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/bg_light_gray" />

            <RelativeLayout
                android:id="@+id/rel_term_of_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tv_term_of_use"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/iv_arrow_terms"
                    android:text="@string/terms_of_use"
                    android:textColor="@color/txt_black"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_arrow_terms"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_arrow_right_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/bg_light_gray" />

            <RelativeLayout
                android:id="@+id/rel_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tv_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/iv_arrow_privacy"
                    android:text="@string/privacy"
                    android:textColor="@color/txt_black"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_arrow_privacy"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_arrow_right_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/bg_light_gray" />

            <RelativeLayout
                android:id="@+id/rel_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tv_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/iv_arrow_contact_us"
                    android:text="@string/contact_us"
                    android:textColor="@color/txt_black"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_arrow_contact_us"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_arrow_right_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/bg_light_gray" />

            <RelativeLayout
                android:id="@+id/rel_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/version"
                    android:textColor="@color/txt_black"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_dot_version"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:layout_toRightOf="@+id/tv_version"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_full_red_dot"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_version_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@+id/iv_dot_version"
                    android:textColor="@color/txt_gray"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_light_gray" />

            <TextView
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/semi_bg_blue"
                android:gravity="center"
                android:minWidth="@dimen/button_min_width"
                android:text="@string/logout"
                android:textColor="@color/txt_white"
                android:textSize="13sp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>